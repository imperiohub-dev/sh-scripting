import express, { Request, Response, NextFunction } from 'express';{{CORS_IMPORT}}{{DOTENV_IMPORT}}
const app = express();{{DOTENV_CONFIG}}

// Middleware
app.use(express.json());
app.use(express.urlencoded({ extended: true }));{{CORS_MIDDLEWARE}}{{LOGGER_MIDDLEWARE}}

// Routes
app.get('/', (req: Request, res: Response) => {
  res.json({
    message: 'Welcome to {{PROJECT_NAME}} API',
    status: 'running',
    timestamp: new Date().toISOString()
  });
});

app.get('/health', (req: Request, res: Response) => {
  res.json({ status: 'ok', uptime: process.uptime() });
});

// Import routes
